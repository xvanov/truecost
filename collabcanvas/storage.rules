rules_version = '2';

// Firebase Storage security rules for construction annotation tool
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated users to read and write construction plan images
    // This enables collaboration - any user can upload and all users can view
    match /construction-plans/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload/read project plan images
    match /projects/{projectId}/plans/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

